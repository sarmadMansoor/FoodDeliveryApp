@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<div class="container mt-5 my-5">
    <div class="row align-items-center justify-content-center">
        <!-- Left Column: Image -->
        <div class="col-lg-6 col-md-6 col-sm-12 text-center mb-4">
            <img src="~/images/login.png" alt="Login Illustration" class="img-fluid" style="max-height: 300px;">
        </div>
        <!-- Right Column: Form -->
        <div class="col-lg-6 col-md-6 col-sm-12">
            <h2 class="text-center mb-4" style="font-family: 'Cursive', sans-serif;">Login</h2>
            <form id="account" method="post">
                <!-- Username -->
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>



                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>`

                <!-- Login Button and Register Link -->
                <div class="d-flex flex-column flex-md-row align-items-center justify-content-between">
                    <button type="submit" class="btn btn-success px-4 mb-3 mb-md-0">Login</button>
                    <p class="mb-0 text-center text-md-left">
                        New User? <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary badge rounded-pill">Register here..</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

