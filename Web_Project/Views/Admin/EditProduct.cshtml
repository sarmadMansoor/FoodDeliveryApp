@model Web_Project.Models.Product

@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Product</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EditProduct" method="post">
        <input type="hidden" name="ProductId" value="@Model.ProductId" />
        <div class="form-group">
            <label for="Name">Product Name</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label for="Price">Price (₹)</label>
            <input type="number" id="Price" name="Price" value="@Model.Price" step="0.01" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Stock">Stock Quantity</label>
            <input type="number" id="Stock" name="Stock" value="@Model.Stock" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success mt-3">Update Product</button>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
